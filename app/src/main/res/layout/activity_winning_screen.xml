<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/baseLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/android_gradient_list"
    tools:context="com.minton.fastmathtrainer.Generic.WinningScreenActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".12"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:keepScreenOn="true"
            android:text="@string/results"
            android:textColor="#FFFFFF"
            android:textSize="50sp"
            android:paddingBottom="1dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/message"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|bottom"
            android:keepScreenOn="true"
            android:paddingLeft="25dp"
            android:text="@string/message"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="bottom|center"
            android:keepScreenOn="true"
            android:paddingLeft="25dp"
            android:paddingTop="20dp"
            android:text="@string/messageLineTwo"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/totalscoretext"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="bottom|center"
            android:keepScreenOn="true"
            android:paddingLeft="25dp"
            android:paddingTop="20dp"
            android:text="@string/totalscoretext"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".4"
        android:orientation="vertical">

        <TextView
            android:id="@+id/totalscorebanner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:keepScreenOn="true"
            android:paddingLeft="25dp"
            android:text="@string/totalscore"
            android:textColor="#FFFFFF"
            android:textSize="74sp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".2"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/newhighscore"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="25dp"
            android:paddingTop="20dp"
            android:keepScreenOn="true"
            android:text="@string/newhighscore"
            android:textColor="#3CF551"
            android:textSize="45sp"
            android:textStyle="italic" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".25"
        android:orientation="horizontal">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="*"
            android:weightSum="4" >

        <TableRow android:layout_weight="1" >
            <Button
                android:id="@+id/menu"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/metallicbuttonstate"
                android:text="@string/menu"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="22sp"/>
            <Button
                android:id="@+id/reset"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_marginRight="5dp"
                android:background="@drawable/metallicbuttonstate"
                android:text="@string/reset"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="22sp"/>
        </TableRow>
        </TableLayout>

    </LinearLayout>

</LinearLayout>
